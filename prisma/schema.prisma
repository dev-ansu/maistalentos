generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum Gender {
  male
  female
  non_binary
  other
  prefer_not_to_say
}

enum CompanySize {
  micro
  small  
  medium
  large
  enterprise
}

enum VerificationStatus {
  pending
  approved
  rejected
  under_review
}

enum Ethnicity {
  white
  black
  brown
  indigenous
  asian
  other
  prefer_not_to_say
}

enum WorkModel {
  presencial
  hibrido
  remoto
}

enum JobStatus{
  open
  paused
  closed
}

enum ApplicationStatus{
  pending
  accepted
  rejected
}

enum DegreeLevel{
  fundamental
  medio
  tecnico
  superior_completo
  superior_incompleto
  pos_graduacao
  mestrado
  doutorado
}

enum LanguageProficiency{
  basico
  intermediario
  avancado
  fluente
  nativo
}

enum UserType {
  candidate
  company
}

model User{
  id String @id @default(uuid())
  name String
  email String
  password String
  userType UserType @default(candidate) // ‚úÖ tipo padr√£o
  isActive Boolean @default(true)
  isSuperAdmin Boolean @default(false)   // ‚úÖ Superadmin
  roleId String?
  role Role? @relation(fields: [roleId], references: [id])
  candidate CandidateProfile?
  company CompanyProfile?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}

model Role{
  id String @id @default(ulid())
  name String @unique
  description String?
  permissions RolePermission[]
  users User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("roles")
}

model Permission{
  id String @id @default(uuid())
  name String @unique
  description String?
  roles RolePermission[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("permissions")
}

model RolePermission{
  id String @id @default(uuid())
  roleId String
  permissionId String
  role Role @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])
  @@map("role_permissions")
}

model CandidateProfile{
  id String @id @default(uuid())
  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  birthDate DateTime?
  summary String?
  resumeUrl String?
  phone String?
  whatsapp String?  
  stateId String?
  gender Gender? // diversidade
  ethnicity Ethnicity? // diversidade
  isAvailable Boolean @default(true) // dispon√≠vel para oportunidades
  salaryExpectation Float? // pretens√£o salarial
  workModel WorkModel[] // presencial, h√≠brido, remoto
   // üìç MELHORIAS DE CONTATO:
  email String? // email alternativo
  portfolioUrl String? // portfolio/linkedin
  
  // üéØ PREFERENCES:
  willingnessToTravel Boolean @default(false)
  willingnessToRelocate Boolean @default(false)
  
  state State? @relation(fields: [stateId], references: [id])
  cityId String?
  city City? @relation(fields: [cityId], references: [id])
  education Education[]
  courses Course[]
  languages Language[]
  experiences Experience[]
  applications Application[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("candidate_profile")
  candidateInterests CandidateInterest[]
  @@index([isAvailable, stateId, cityId]) // para busca

}

model CompanyProfile{
  id String @id @default(uuid())
  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  name String
  cnpj String @unique
  description String?
  phone       String?
  contactEmail String?
  instagram   String?
  linkedin    String?
  facebook    String?
  website String?
  isActive    Boolean   @default(true)
   // üÜï CAMPOS SUGERIDOS:
  companySize CompanySize? // micro, pequena, media, grande
  industry String? // ramo de atividade
  foundedYear Int? // ano de funda√ß√£o
  logoUrl String? // logo da empresa
  
  // üõ°Ô∏è CAMPOS ANTI-FRAUDE:
  isVerified Boolean @default(false)
  verificationStatus VerificationStatus @default(pending)
  verificationNotes String?
  
  // üìç MELHORIAS DE LOCALIZA√á√ÉO:
  address String? // endere√ßo completo
  zipCode String? // CEP
  
  jobs Job[]
  stateId String
  state State @relation(fields: [stateId], references: [id])
  cityId String
  city City @relation(fields: [cityId], references: [id])
  companyInterest CompanyInterest[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("company_profile")
  @@index([isVerified, isActive]) // para queries de modera√ß√£o

}


model Job{
  id String @id @default(uuid())
  companyId String
  company CompanyProfile @relation(fields: [companyId], references: [id], onDelete: Cascade)
  title String
  description String
  requirements String?
  salary Float?
  
  location String?
  type WorkModel
  status JobStatus @default(open)
  applications Application[]

  stateId String
  state State @relation(fields: [stateId], references: [id])

  cityId String
  city City @relation(fields: [cityId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
  @@index([status])
  @@map("jobs")
}

model Application{
  id String @id @default(ulid())
  candidateId String
  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  jobId String
  job Job @relation(fields: [jobId], references: [id])
  status ApplicationStatus @default(pending)

  @@index([candidateId, jobId])

  @@map("applications")
}

model Education{
  id String @id @default(uuid())
  candidateId String
  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  institution String
  degree DegreeLevel
  fieldOfStudy String?
  startDate DateTime?
  endDate DateTime?
  currentlyStudying Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("educations")
}

model Course{
  id String @id @default(uuid())
  candidateId String
  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  title String
  institution String?
  hours Int?
  certificateUrl String?
  completionDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("courses")
}

model Language{
  id String @id @default(uuid())
  candidateId String
  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  name String
  proficiency LanguageProficiency
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("languages")
}

model Experience{
  id String @id @default(uuid())
  candidateId String
  candidate CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  company String
  position String
  description String?
  startDate DateTime
  endDate DateTime?
  currentlyWorking Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("experiences")
}

model State{
  id String @id @default(uuid())
  name String @unique
  acronym String @unique @db.VarChar(2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cities City[]

  @@map("states")
  jobs Job[]
  candidateProfiles CandidateProfile[]
  companyProfiles CompanyProfile[]
}

model City{
  id String @id @default(uuid())
  name String @db.VarChar(250)
  stateId String
  state State @relation(fields: [stateId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("cities")
  @@unique([name, stateId], name: "name_stateId")
  jobs Job[]
  candidateProfiles CandidateProfile[]
  companyProfiles CompanyProfile[]
}

model InterestArea {
  id        String   @id @default(uuid())
  name      String   @unique
  candidates CandidateInterest[]
  companies CompanyInterest[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompanyInterest{
  id           String          @id @default(uuid())
  companyId  String
  company    CompanyProfile @relation(fields: [companyId], references: [id])
  interestId   String
  interest     InterestArea     @relation(fields: [interestId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([companyId, interestId])
}

model CandidateInterest {
  id           String          @id @default(uuid())
  candidateId  String
  candidate    CandidateProfile @relation(fields: [candidateId], references: [id])
  interestId   String
  interest     InterestArea     @relation(fields: [interestId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([candidateId, interestId])
}